@model Restopos.Yoklama.Web.Models.AbsenceStatusViewModel

@{
    ViewData["Title"] = "Yoklama Güncelleme";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div class="form-group">
                <label class="control-label" asp-for="User"></label>
                <input asp-for="User.Id" class="form-control" type="hidden" />
                <input asp-for="User.Name" class="form-control" type="hidden" />
                <input asp-for="User.Surname" class="form-control" type="hidden" />
                <input class="form-control" type="text" readonly value="@Model.User.Name @Model.User.Surname" />
            </div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" type="hidden" />
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="AbsenceType"></label>
                <select asp-for="AbsenceType.Id" asp-items="ViewBag.AbsenceTypes" class="form-control"></select>
                <span asp-validation-for="AbsenceType.Id" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Günlük Yoklamalara Geri Dönün...</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}