@model IEnumerable<AbsenceStatusViewModel>

@{
    ViewData["Title"] = "Yoklama İşlemleri";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<h4>Bugünkü Yoklamalar</h4>

<p>
    <a asp-action="Add">Yeni Bir Yoklama Girin</a>
</p>
@if (Model.Count() > 0)
{
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>
                    Personel Adı
                </th>
                <th>
                    Devamsızlık Türü
                </th>
                <th>
                    Başlangıç Zamanı
                </th>
                <th>
                    Bitiş Zamanı
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.User.Name @item.User.Surname
                    </td>
                    <td>
                        @item.AbsenceType.Name
                    </td>
                    <td>
                        @item.StartDate.ToString("dd.MM.yyyy HH:mm")
                    </td>
                    <td>
                        @item.EndDate.ToString("dd.MM.yyyy HH:mm")
                    </td>
                    <td>
                        <a asp-action="Update" class="btn btn-warning btn-sm" asp-route-id="@item.Id">Güncelle</a> 
                        <a asp-action="Sil" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3">
        <p class="lead">Bugün İçin Yoklama Kaydı Bulunamadı</p>
    </div>
}
