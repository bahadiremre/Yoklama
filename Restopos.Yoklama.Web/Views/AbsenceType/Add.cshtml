@model Restopos.Yoklama.Web.Models.AbsenceTypeViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<h2>Yeni Bir Devamsızlık Türü Ekleyin</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHourly" /> @Html.DisplayNameFor(model => model.IsHourly)
                </label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Devamsızlık türleri listesine geri dönün...</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}