@model IEnumerable<PrivilegeViewModel>

@{
    ViewData["Title"] = "Yetkiler";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover mt-3">
    <thead>
        <tr>
            <th>
                Yetki Adı
            </th>
            <th>
                Açıklama
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @if (User.HasClaim(x => x.Value == ConstPrivileges.UPDATE_PRIVILEGES_DESC))
                {
                    <a asp-action="Update" class="btn btn-warning btn-sm" asp-route-id="@item.Id">Güncelle</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
